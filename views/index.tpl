                    } else {
                        // 更改狀態失敗，顯示錯誤訊息
                        alert('狀態更改失敗：' + data.message);
                    }
                },
                error: function (xhr, status, error) {
                    // 處理 AJAX 錯誤
                    alert('發生錯誤：' + error);
                }
            });
        });
    });

